<?xml version="1.0" encoding="UTF-8"?>
<LightningMessageChannel xmlns="http://soap.sforce.com/2006/04/metadata">
    <masterLabel>SampleMessageChannel</masterLabel>
    <description>Message Channel demonstration channel</description>
    <isExposed>true</isExposed>
    <lightningMessageFields>
        <fieldName>message</fieldName>
        <description>This is the field to pass message data</description>
    </lightningMessageFields>
    <lightningMessageFields>
        <fieldName>senderId</fieldName>
        <description>This is the field to pass sender id</description>
    </lightningMessageFields>
    <lightningMessageFields>
        <fieldName>senderAlias</fieldName>
        <description>This is the field to pass sender alias</description>
    </lightningMessageFields>
    <lightningMessageFields>
        <fieldName>senderEmail</fieldName>
        <description>This is the field to pass sender email adress</description>
    </lightningMessageFields>
    <lightningMessageFields>
        <fieldName>senderUsername</fieldName>
        <description>This is the field to pass sender username</description>
    </lightningMessageFields>
    <lightningMessageFields>
        <fieldName>timestamp</fieldName>
        <description>date/time the message was published</description>
    </lightningMessageFields>
</LightningMessageChannel>
